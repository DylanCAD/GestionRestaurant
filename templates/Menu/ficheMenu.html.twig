{% extends 'base.html.twig' %}

{% block title %}Fiche menu{% endblock %}

{% block body %}
<h1 class="text-center pt-2 ">Composition du Menu</h1>      
<hr>
        <div class="card mb-3 border-warning">
        <h3 class="card-header"> {{leMenu.nomMenu}}</h3>
        <div class="row">
            <div class="col-3 d-flex align-items-center mx-auto">
                <img class="avatar mx-auto  d-block " style="height: auto; width: 200px; display: block;" src=" {{asset( leMenu.imageMenu) }} " alt="Card image">
            </div>
            <div class="col">        
            <div class="card-body">
            <p class="card-text"> {{leMenu.descriptionMenu|raw}}</p>
        </div>

        </div>
        <ul class="list-group list-group-flush">
            <li class="list-group-item"> {{leMenu.type.genretype}}</li>
            <li class="list-group-item"> {{leMenu.prixMenu}} â‚¬</li>
        </ul>
        </div>
    </div>

<table class="table mx-auto">
  <thead>
    <tr>
      <th scope="col-3">Boisson :</th>
      <th scope="col-3">Accompagnement :</th>
      <th scope="col-3">Sauce :</th>
    </tr>
  </thead>
  <tbody>
    <td>
      <img class="miniature" src={{asset(leMenu.boissons.image)}} alt=""> <p> {{leMenu.boissons.nom}} </p>
    </td>

    <td>
      <img class="miniature" src={{asset(leMenu.accompagnements.imageAccompagnement)}} alt=""> <p> {{leMenu.accompagnements.nomAccompagnement}} </p>
    </td>

    <td>
      <img class="miniature" src={{asset(leMenu.sauces.imageSauce)}} alt=""> <p> {{leMenu.sauces.nomSauce}} </p>
    </td>
  </tbody>
</table>

{% endblock %}
